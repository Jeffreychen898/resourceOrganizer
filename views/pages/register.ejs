<!DOCTYPE html>
<html>
	<head>
		<title>Register</title>
		<%- include ("../parts/GoogleFonts.ejs") %>
		<link rel="stylesheet" type="text/css" href="/css/global.css"/>
		<link rel="stylesheet" type="text/css" href="/css/header.css"/>
		<link rel="stylesheet" type="text/css" href="/css/login.css"/>
	</head>
	<body>
		<%- include ("../parts/header.ejs") %>
		<form action="/register", method="POST">
			<fieldset>
				<legend class="form-legend">Register</legend>
				<% if(messages.error) { %>
					<p class="error-message"><%= messages.error %></p>
				<% } %>
				<input placeholder="Display Name" class="form-data form-content" name="displayName" required/>
				<input placeholder="Email" class="form-data form-content" name="email" required/>
				<input type="password" placeholder="Password" class="form-data form-content" name="password" required/>
				<input type="password" placeholder="Confirm Password" class="form-data form-content" name="confirmPassword" required/>
				<input type="hidden" value="<%= csrfToken %>" name="_csrf"/>
				<small class="link"><a href="/login">Login</a></small>
				<button type="submit" class="form-submit form-content">Register</button>
			</fieldset>
		</form>
	</body>
</html>
